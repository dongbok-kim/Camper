<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.camper.admin.dao.CampingAdmDAO">

	<!-- 캠핑장 목록 총 갯수 가져오기 (페이징 처리) -->
	<select id="campingTotal" parameterType="hashmap" resultType="int">
		SELECT COUNT(ca_idx) FROM cp_camping
		WHERE 1
			<if test="keyword != null and !keyword.equals('')">
				<choose>
					<when test="filter!= null and type.equals('mb_id')">
						
					</when>
				</choose>
			</if>
		
		ORDER BY
			ca_idx DESC
	</select>

	<!-- 캠핑장 목록 전체 -->
	<select id="campingAdmList" resultType="admCamping">
		SELECT 
			ca_idx, ca_name, ca_sido, ca_sigungu, ca_tel, ca_create_date,
			ca_modified_date, ca_manage_status
		FROM 
			cp_camping
		ORDER BY
			ca_idx DESC
	</select>

</mapper>